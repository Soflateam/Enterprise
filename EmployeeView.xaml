<Page x:Class="Enterprise.EmployeeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
      xmlns:local="clr-namespace:Enterprise"
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Height="600" Width="800" 
      Title="EmployeeView">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>


    <Border Background="#eff2f7" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Left Side Architecture-->
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Column="1" Grid.Row="1">
                <!--Page Title-->
                <TextBlock Text="Employees" Grid.Row="1" FontSize="26" FontWeight="SemiBold" 
                            FontFamily="Book Antiqua" Margin="10,37,0,0" Foreground="#121518" HorizontalAlignment="Left"
                            VerticalAlignment="Top"/>

                <Grid Grid.Column="1" Grid.Row="2">

                    <!--Add Button-->
                    <Button Style="{StaticResource AddButton}" VerticalAlignment="Top" Margin="0,82,25,0">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Width="11" Height="11"
                           Margin="0,1,0,0"/>
                            <TextBlock Text="Add New" Margin="3,0,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!--Visual Seperator-->
                <Separator Height="1" Grid.Row="2" Background="#dae2ea" Margin="0,75,0,0" VerticalAlignment="Top"/>

                <!--Small Tab Buttons-->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,70,0,0" VerticalAlignment="Top">
                    <Button Content="All" Style="{StaticResource TabButton}" Margin="5,2,-15,0"/>
                    <Button Content="Permanent" Style="{StaticResource TabButton}" Margin="5,2,0,0"/>
                    <Button Content="Temporary" Style="{StaticResource TabButton}" Margin="5,2,0,0"/>
                </StackPanel>

                <TextBlock Text="All" Grid.Row="4" FontSize="16" FontWeight="SemiBold"
                                   Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top"
                                   Margin="10,115,0,0"/>

                <TextBlock Text="Filter by:" Grid.Row="4" FontSize="12" FontWeight="SemiBold"
                                   Foreground="Black" HorizontalAlignment="Right" VerticalAlignment="Top"
                                   Margin="0,117,180,0"/>

                <!--Filter Box-->
                <Grid Width="150" HorizontalAlignment="Right" Grid.Row="4" Margin="0,-349,25,0">
                    <TextBlock Margin="15,0,0,0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                          Panel.ZIndex="1" Text="Search in Employees ..."  Visibility="{Binding ElementName=SearchText,Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}"/>


                    <TextBox x:Name="FilterText" Style="{StaticResource SearchFilterBox}"/>
                </Grid>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="5">

                <!--Employees DataGrid-->
                <DataGrid Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" 
                          Margin="15,125,10,0" x:Name="EmployeesDataGrid">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn CanUserResize="False" Width="auto" ElementStyle="{StaticResource CheckBoxStyle1}">
                            <DataGridCheckBoxColumn.HeaderTemplate>
                                <DataTemplate>
                                    <CheckBox Style="{StaticResource CheckBoxStyle1}"/>
                                </DataTemplate>
                            </DataGridCheckBoxColumn.HeaderTemplate>
                        </DataGridCheckBoxColumn>

                        <DataGridTemplateColumn Header="Name" IsReadOnly="True" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding EmployeeName}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Title" IsReadOnly="True" Width="*" Binding="{Binding EmployeeTitle}"/>
                        <DataGridTextColumn Header="Phone" IsReadOnly="True" Width="*" Binding="{Binding EmployeePhone}"/>
                        <DataGridTextColumn Header="Email" IsReadOnly="True" Width="*" Binding="{Binding EmployeeEmail}"/>

                        <DataGridTemplateColumn Header="Actions" IsReadOnly="True" Width="125">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource GridViewButton}">
                                            <Icon:PackIconMaterial Kind="MagnifyPlus" Margin="0,0,3,0"   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Button>
                                        <Button Style="{StaticResource GridEditButton}">
                                            <Icon:PackIconMaterial Kind="AccountEdit" Margin="0,0,3,0"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Button>
                                        <Button Style="{StaticResource GridRemoveButton}">
                                            <Icon:PackIconMaterial Kind="TrashCan" Margin="0,0,4,0"   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</Page>
