<Page x:Class="Enterprise.EmployeeAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Enterprise"
      Height="600" Width="800" 
      Title="DashboardView">

    <Grid>

        <Grid Grid.Column="1" Grid.Row="1">
            <!--Page Title-->
            <TextBlock Text="Dashboard" Grid.Row="1" FontSize="26" FontWeight="SemiBold" 
                                FontFamily="Book Antiqua" Margin="10,37,0,0" Foreground="#121518" HorizontalAlignment="Left"
                                VerticalAlignment="Top"/>

            <!--Visual Seperator-->
            <Separator Height="1" Grid.Row="2" Background="#dae2ea" Margin="0,75,0,0" VerticalAlignment="Top"/>

        </Grid>
    </Grid>
</Page>
