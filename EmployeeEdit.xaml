<Page x:Class="Enterprise.EmployeeEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
      xmlns:local="clr-namespace:Enterprise"
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Height="550" Width="800" 
      Title="EmployeeEdit">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>

    <Border Background="#eff2f7" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Column="1" Grid.Row="1">
                
                <!--Page Title-->
                <TextBlock Text="Employees" Grid.Row="1" Style="{StaticResource TitleText}"/>

                <Grid Grid.Column="1" Grid.Row="2">
                    

                    <!--Editing Button-->
                    <Button Style="{StaticResource AddButton}" VerticalAlignment="Top" Margin="0,82,25,0">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="BookEdit" VerticalAlignment="Center" Width="11" Height="11" Margin="0,1,0,0"/>
                            <TextBlock Text="Editing" Margin="3,0,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>

            <Border Grid.Column="1" Grid.Row="5" Background="#26331d" CornerRadius="8" Margin="15,125,15,15">
                <DockPanel Margin="20,0,0,0">
                    
                    <!--First Column-->
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,35,0,0">
                        <Button Click="UploadPictureButton_Click" Style="{StaticResource UploadPictureButton}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,20">
                            <Border BorderBrush="White" BorderThickness="0" CornerRadius="20" Height="150" Width="150" ClipToBounds="True">
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image x:Name="EmployeeImage" Source="{Binding EmployeeImagePath}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Button>

                        <TextBlock Text="Full Name" Style="{StaticResource EditInformationTextBlock}"/>
                        <TextBox x:Name="FullNameTextBox" Style="{StaticResource EditInformationBox}"
                                  Text="{Binding EmployeeName, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Title" Style="{StaticResource EditInformationTextBlock}"/>
                        <TextBox x:Name="TitleTextBox" Style="{StaticResource EditInformationBox}"
                                 Text="{Binding EmployeeTitle, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!--Second Column-->
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,50,0,0">

                        <TextBlock Text="Employee Type" Style="{StaticResource EditInformationTextBlock}"/>
                        <TextBox x:Name="EmployeeTypeTextBox" Style="{StaticResource EditInformationBox}"
                                 Text="{Binding EmployeeType, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Phone" Style="{StaticResource EditInformationTextBlock}"/>
                        <TextBox x:Name="PhoneTextBox" Style="{StaticResource EditInformationBox}"
                                 Text="{Binding EmployeePhone, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Email" Style="{StaticResource EditInformationTextBlock}"/>
                        <TextBox x:Name="EmailTextBox" Style="{StaticResource EditInformationBox}"
                                 Text="{Binding EmployeeEmail, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Placeholder" Style="{StaticResource EditInformationTextBlock}"/>
                        <TextBox Style="{StaticResource EditInformationBox}"/>
                    </StackPanel>

                    <!--Third Column-->
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,50,0,0">
                        <TextBlock Text="Placeholder" Style="{StaticResource EditInformationTextBlock}"/>
                        <TextBox Style="{StaticResource EditInformationBox}"/>

                        <TextBlock Text="Placeholder" Style="{StaticResource EditInformationTextBlock}"/>
                        <TextBox Style="{StaticResource EditInformationBox}"/>

                        <TextBlock Text="Placeholder" Style="{StaticResource EditInformationTextBlock}"/>
                        <TextBox Style="{StaticResource EditInformationBox}"/>

                        <TextBlock Text="Placeholder" Style="{StaticResource EditInformationTextBlock}"/>
                        <TextBox Style="{StaticResource EditInformationBox}"/>
                    </StackPanel>

                    <!--Fourth Column-->
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,50,0,0">
                        <TextBlock Text="Placeholder" Style="{StaticResource EditInformationTextBlock}"/>
                        <TextBox Style="{StaticResource EditInformationBox}"/>

                        <TextBlock Text="Placeholder" Style="{StaticResource EditInformationTextBlock}"/>
                        <TextBox Style="{StaticResource EditInformationBox}"/>

                        <TextBlock Text="Placeholder" Style="{StaticResource EditInformationTextBlock}"/>
                        <TextBox Style="{StaticResource EditInformationBox}"/>

                        <TextBlock Text="Placeholder" Style="{StaticResource EditInformationTextBlock}"/>
                        <TextBox Style="{StaticResource EditInformationBox}"/>

                        <!--Save Button-->
                        <Button x:Name="SaveButton" Margin="0,5,20,0" Click="SaveButton_Click" Style="{StaticResource AddButton}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Icon:PackIconMaterial Kind="ContentSave" VerticalAlignment="Center" Width="11" Height="11" Margin="0,1,0,0"/>
                                <TextBlock Text="Save" Margin="6,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!--Discard and Close Button-->
                    <Button x:Name="DiscardButton" Style="{StaticResource InnerCloseButton}" Click="DiscardButton_Click"
                            Margin="0,10,10,0"  VerticalAlignment="Top" HorizontalAlignment="Right">
                        <Icon:PackIconMaterial Kind="CloseOutline" Width="12" Height="12"/>
                    </Button>
                </DockPanel>
            </Border>

        </Grid>
    </Border>
</Page>
